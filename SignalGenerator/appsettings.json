{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Server": {
    "ApiUrl": "http://localhost:5000/api/PacketData" // آدرس API که داده‌ها را می‌گیرد
  },
  "Modbus": {
    "Ip": "localhost", // آدرس IP سرور Modbus
    "Port": "502" // پورت اتصال Modbus TCP
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=SignalLogsDb;User Id=myuser;Password=mypassword;" // رشته اتصال به دیتابیس
  },
  "AllowedHosts": "*"
}
